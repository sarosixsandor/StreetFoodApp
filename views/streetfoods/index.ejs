<% include ../partials/header %>

    <div class="container">
        <!-- Jumbotron header -->
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to the Street Food App!</h1>
                <p>View the best Street food places!</p>
                <p>
                    <a class="btn btn-primary btn-md" href="/streetfoods/new">Add a new street food place!</a>
                </p>
            </div>
        </header>

        <!-- Display each street food in bootstrap cards -->
        <div class="row">
            <% streetfoods.forEach(function(streetfood){ %>
                <div class="col-md-4 mb-2">
                    <div class="card">
                        <img class="card-img-top" src="<%= streetfood.image %>" alt="">
                        <div class="card-body">
                            <h3 class="card-title"><%= streetfood.name %></h3>
                            <a href="/streetfoods/<%= streetfood._id %>" class="btn btn-primary">More info</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

<% include ../partials/footer %>